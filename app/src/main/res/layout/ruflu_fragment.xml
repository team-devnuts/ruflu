<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fragment.HomeFragment"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab_top_layout"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="1"
        android:elevation="5dp"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/ruflu_tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tabTextColor="@color/black"
            android:layout_weight="0.3"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorColor="#FBC55E"
            app:tabSelectedTextColor="#FBC55E"
            >

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ruflu_ruflu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ruflu"
                />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/ruflu_NB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NearBy"
                />

        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight="0.7"
            />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ruflu_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_top_layout"
        android:layout_weight="1" />

</RelativeLayout>